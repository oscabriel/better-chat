{
	"name": "server",
	"main": "src/index.ts",
	"type": "module",
	"scripts": {
		"build": "wrangler deploy --dry-run",
		"typecheck": "tsc -b",
		"compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
		"dev": "wrangler dev --port=3000",
		"deploy": "alchemy deploy",
		"destroy": "alchemy destroy",
		"a:dev": "alchemy dev",
		"a:clean": "rm -rf .alchemy",
		"db:generate": "drizzle-kit generate --config=./drizzle.db.config.ts",
		"db:migrate": "DB_STAGE=dev drizzle-kit migrate --config=./drizzle.db.config.ts",
		"db:studio": "DB_STAGE=dev drizzle-kit studio --config=./drizzle.db.config.ts",
		"db:studio:prod": "drizzle-kit studio --config=./drizzle.db.config.ts",
		"do:generate": "drizzle-kit generate --config=./drizzle.do.config.ts"
	},
	"dependencies": {
		"@ai-sdk/anthropic": "^2.0.56",
		"@ai-sdk/google": "^2.0.46",
		"@ai-sdk/mcp": "^0.0.12",
		"@ai-sdk/openai": "^2.0.85",
		"@ai-sdk/provider": "^2.0.0",
		"@libsql/client": "^0.15.15",
		"@modelcontextprotocol/sdk": "^1.24.3",
		"@orpc/server": "^1.12.2",
		"@react-email/render": "^2.0.0",
		"ai": "^5.0.112",
		"better-auth": "1.4.5",
		"dotenv": "^17.2.2",
		"drizzle-orm": "^0.45.1",
		"exa-js": "^2.0.11",
		"hono": "^4.10.8",
		"nanoid": "^5.1.6",
		"resend": "^6.6.0",
		"zod": "^4.1.13"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20251212.0",
		"@types/node": "^25.0.1",
		"alchemy": "^0.81.1",
		"dotenv": "^17.2.3",
		"drizzle-kit": "^0.31.8",
		"tsdown": "^0.17.3",
		"typescript": "^5.9.3",
		"wrangler": "^4.54.0"
	}
}
